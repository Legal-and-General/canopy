{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "noUnusedLocals": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "canopy": [
        "dist/canopy"
      ],
      "@legal-and-general/canopy": [
        "dist/canopy"
      ],
      "canopy/*": [
        "dist/canopy/*"
      ],
      "core-js/es7/*": [
        "node_modules/core-js/es"
      ],
      "@lib/storybook/*": [
        "projects/canopy/storybook/*"
      ],
    },
    "useDefineForClassFields": false
  }
}
