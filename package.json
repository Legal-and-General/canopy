    "@angular-eslint/template-parser": "18.4.3",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@angular/language-service": "^19.2.14",
    "@commitlint/cli": "^19.8.1",
