    "karma-jasmine-html-reporter": "^2.1.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "ng-mocks": "^14.11.0",
    "ng-packagr": "^15.2.2",
