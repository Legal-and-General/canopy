    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^13.0.4",
    "mini-css-extract-plugin": "^2.7.2",
    "ng-mocks": "^14.4.0",
    "ng-packagr": "^14.2.2",
    "postcss": "^8.4.19",
