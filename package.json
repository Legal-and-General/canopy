    "stylelint": "^14.15.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "svg-to-ts": "^9.0.0",
    "svgo": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-remove-empty-scripts": "^0.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
