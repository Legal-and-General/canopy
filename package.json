{
  "name": "@legal-and-general/canopy",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "url": "git://github.com/Legal-and-General/canopy.git",
  "repository": "https://github.com/Legal-and-General/canopy",
  "type": "module",
  "scripts": {
    "// ----- STORYBOOK": "",
    "start": "npm run generate:css-variables && npm run build && ng run canopy:storybook",
    "build:storybook": "npm run generate:css-variables && ng run canopy:build-storybook",
    "// ----- BUILD LIB": "",
    "build": "npm run build:icons && ng build canopy && npm run build:styles",
    "build:icons": "npm run optimise:svgs && npm run generate:icons && npm run generate:brand-icons && npm run generate:icon-loader",
    "build:styles": "webpack --config webpack.global.config.js",
    "// ----- GENERATE": "",
    "generate:icons": "svg-to-ts-files --config svg-to-ts-icons.config.json",
    "generate:brand-icons": "svg-to-ts-files --config svg-to-ts-brand-icons.config.json",
    "generate:icon-loader": "node scripts/generate-icon-loader.js",
    "generate:css-variables": "node scripts/generate-css-variables.js",
    "// ----- TEST": "",
    "e2e": "ng e2e",
    "test": "jest",
    "test:ci": "jest --ci --workers=2",
    "test:visual": "npm run build && npm run build:storybook && npx percy storybook ./storybook-static",
    "// ----- LINTING AND OPTIMISATION": "",
    "eslint": "ng lint --quiet",
    "lint": "npm run eslint && npm run stylelint",
    "optimise:svgs": "svgo projects/canopy/src/assets/icons -r --config=svgo-icons.config.js && svgo projects/canopy/src/assets/brand-icons -r --config=svgo-brand-icons.config.js",
    "stylelint": "stylelint \"projects/**/*.scss\"",
    "// ----- TEST APP": "",
    "build:test-app": "npm run build && ng build canopy-test-app --configuration production --output-path ./test-dist",
    "start:test-app": "ng serve",
    "test:test-app": "ng test canopy-test-app",
    "// ----- MISC": "",
    "commit": "npx git-cz",
    "docs:json": "compodoc -p ./tsconfig.json --disablePrivate -e json -d .",
    "license-check:build": "npx license-checker --summary --start dist/canopy --onlyAllow 'MIT;Apache-2.0;0BSD'",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "20.3.16",
    "@angular/cdk": "20.2.14",
    "@angular/common": "20.3.16",
    "@angular/compiler": "20.3.16",
    "@angular/core": "20.3.16",
    "@angular/forms": "20.3.16",
    "@angular/platform-browser": "20.3.16",
    "@angular/platform-browser-dynamic": "20.3.16",
    "@angular/router": "20.3.16",
    "core-js": "3.47.0",
    "date-fns": "4.1.0",
    "rxjs": "7.8.1",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-builders/jest": "20.0.0",
    "@angular-devkit/build-angular": "20.3.14",
    "@angular-eslint/builder": "20.7.0",
    "@angular-eslint/eslint-plugin": "20.7.0",
    "@angular-eslint/eslint-plugin-template": "20.7.0",
    "@angular-eslint/schematics": "20.7.0",
    "@angular-eslint/template-parser": "20.7.0",
    "@angular/cli": "20.3.14",
    "@angular/compiler-cli": "20.3.16",
    "@angular/language-service": "20.3.16",
    "@commitlint/cli": "20.3.0",
